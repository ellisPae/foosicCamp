<!DOCTYPE html>
<html>
  <head>
    <title>foosicamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('record_player_icon.png') %>
    <script type='text/javascript'>
      window.user_logo = "<%= image_url('user_logo.png') %>"
      window.lightning_icon = "<%= image_url('lightning_icon.png') %>"
      window.heart_icon = "<%= image_url('heart_icon.png') %>"

      window.virtual_reality = "<%= image_url('virtual_reality.png') %>"
      window.guitarist1 = "<%= image_url('guitarist1.jpg') %>"
      window.empty_festival = "<%= image_url('empty_festival.jpg') %>"
      window.sad_artist = "<%= image_url('disgruntled_artist.jpeg') %>"
      window.notification_icon = "<%= image_url('notification_icon.svg') %>"

    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
